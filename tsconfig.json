{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata"],
      "noImplicitAny": false,
      "noEmitOnError": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "allowJs": true,
      "outDir": "dist",
      "pretty": true,
      "jsx": "react"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ]
}